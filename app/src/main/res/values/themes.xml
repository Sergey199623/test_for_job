<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Test_task" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="colorNavigationItem">@color/menu_item_color_state</item>

        <item name="colorNavigationItemSelected">@color/green</item>
        <item name="colorNavigationItemDef">@color/white</item>
    </style>

    <style name="Theme.Test_task.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Test_task.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Test_task.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
    </style>

    <style name="CalcBtn">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.MaterialComponents.BottomSheet">
        <item name="behavior_peekHeight">600dp</item>
    </style>

    <attr name="colorNavigationItem" format="color" />
    <attr name="colorNavigationItemSelected" format="color" />
    <attr name="colorNavigationItemDef" format="color" />
</resources>